{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "_enums/*": ["./src/app/_enums/*"],
      "_interfaces/*": ["./src/app/_interfaces/*"],
      "_pipes/*": ["./src/app/_pipes/*"],
		  "_services/*": ["./src/app/_services/*"]
	  },
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
      "node_modules"
  ]
}
